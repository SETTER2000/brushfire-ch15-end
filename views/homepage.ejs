<div ng-controller="homePageController" class="container" style="margin-top: 150px;">
  <div class=" col-md-6 col-md-offset-3">
      <h1> <img src="./images/b.jpg" height="80" width="48" />What do you want to learn?</h1>
    <form class="form"  ng-submit="search()">
      <div class="input-group" >
        <input style="font-size: 1.5em" type="text" class="form-control" placeholder="Search" name="search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <span ng-show="!loading"><i class="fa fa-search" ></i></span>
            <span ng-show="loading"><i class="overlord-loading-spinner fa fa-spinner" ></i></span>
          </button>
        </div>
      </div>
    </form>
  </div>
    <div class="container" ng-cloak ng-show="results">
      <div class="row">
    <div class="col-md-12">
      <div>
        <h1>Search Results for ...</h1>
      </div>
      <div class="well">
        <div class="list-group">
          <div ng-repeat="tutorial in tutorials">
            <a href="/tutorials/detail" class="list-group-item tutorials-list">
              <div class="col-md-11" style="margin-top: 25px">
                <h3 class="list-group-item-heading">
                {{ tutorial.title }}
                </h3>
                <p class="list-group-item-text" style="font-size: 1.2em">
                  {{ tutorial.description }}
                </p>
                <ul class="list-inline list-unstyled">
                  <li>|</li>
                  <li>
                    <span>by: <i class="fa fa-user"></i>  {{ tutorial.owner }}</span>
                  </li>
                  <li>|</li>
                  <li>
                    <span><i class="fa fa-calendar"></i>  {{ tutorial.createdAt | date:"MM/dd/yyyy 'at' h:mma"}}</span>
                  </li>
                  <li>|</li>
                  <li>
                    <span><i class="fa fa-video-camera"></i>  {{ tutorial.totalTime }}</span>
                  </li>
                  <li>|</li>
                  <li>
                    <span><rating ng-model="tutorial.stars" max="max" readonly="isReadonly" on-hover="hoveringOver(value, tutorial.id)" on-leave="overStar = null"></rating></span> 
                  </li>
                  <li>|</li>
                </ul>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>